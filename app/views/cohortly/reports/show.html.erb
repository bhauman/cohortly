<h1><%= params[:id] %></h1>

<table>
  <tr>
    <th>Month</th>
    <th>N</th>
    <% 12.times do |month| %>
      <th><%= (month + 1).ordinalize %> month</th>
    <% end %>
  </tr>
  <% @report.month_cohorts.each do |cohort_key| %>
    <tr class="<%= cycle('odd', 'even') %>">
      <td><%= cohort_key %></td>
      <% @report.percent_line(cohort_key)[0,13].each do |val| %>
        <td style="text-align: right;"><%= val %></td>
      <% end %>
    </tr>
  <% end %>
</table>

